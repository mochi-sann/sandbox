<%= form_with model: task, class: "row g-3" do |form| %>
  <% if task.errors.any? %>
    <div class="col-12">
      <div class="alert alert-danger" role="alert">
        <p class="mb-2">入力内容を確認してください。</p>
        <ul class="mb-0 ps-3">
          <% task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="col-12">
    <%= form.label :title, "タイトル", class: "form-label" %>
    <%= form.text_field :title, required: true, autofocus: true, class: "form-control" %>
  </div>

  <div class="col-12">
    <%= form.label :description, "詳細", class: "form-label" %>
    <%= form.text_area :description, rows: 3, class: "form-control" %>
  </div>

  <div class="col-12 d-flex gap-2">
    <%= form.submit task.persisted? ? "更新" : "追加", class: "btn btn-primary" %>
    <% if task.persisted? %>
      <%= link_to "キャンセル", task_path(task), data: { turbo_frame: dom_id(task) }, class: "btn btn-outline-secondary" %>
    <% end %>
  </div>
<% end %>

<% content_for :title, "TODOリスト" %>

<section class="hero">
  <h1>TODOリスト</h1>
  <p>Hotwireでサクサク管理しましょう。</p>
</section>

<section class="task-form">
  <h2>新しいタスク</h2>
  <%= turbo_frame_tag "task_form" do %>
    <%= render "form", task: @task %>
  <% end %>
</section>

<section class="task-list">
  <h2>タスク一覧</h2>
  <div id="tasks">
    <% if @tasks.any? %>
      <%= render @tasks %>
    <% else %>
      <p>まだタスクはありません。最初のタスクを追加しましょう。</p>
    <% end %>
  </div>
</section>

<h1>this is show</h1>
<a href="/articles">/articles <a>
<h1>   <%= @article.title%> </h1>
<p>   <%= @article.body%> </p>
<ul>
  <li>
<%= link_to "edit article" , edit_article_path(@article) %>
  </li>
  <li>
    <%= link_to "Destory" , article_path(@article) , data: {
      turbo_method: :delete ,
      turbo_confirm: "are yo sure? "
    } %>
  </li>
</ul>
<h2>Add a comment:</h2>
<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

